# ==========================================
# Application
# ==========================================
NODE_ENV=development
APP_NAME=Nexo
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3002

# ==========================================
# Database (PostgreSQL)
# ==========================================
DATABASE_URL=postgresql://nexo:nexo_password@localhost:5432/nexo_db
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Docker Compose internal
POSTGRES_DB=nexo_db
POSTGRES_USER=nexo
POSTGRES_PASSWORD=nexo_password

# ==========================================
# Redis
# ==========================================
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# ==========================================
# Keycloak
# ==========================================
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=nexo
KEYCLOAK_CLIENT_ID=nexo-api
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Frontend Keycloak
NEXT_PUBLIC_KEYCLOAK_URL=http://localhost:8080
NEXT_PUBLIC_KEYCLOAK_REALM=nexo
NEXT_PUBLIC_KEYCLOAK_CLIENT_ID=nexo-web

# ==========================================
# Email (SMTP)
# ==========================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@nexo.local

# ==========================================
# Storage
# ==========================================
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=/app/uploads

# ==========================================
# Logging
# ==========================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ==========================================
# API Configuration
# ==========================================
SWAGGER_ENABLED=true
CORS_ORIGIN=http://localhost:3002

# ==========================================
# Container Registry (for CI/CD)
# ==========================================
GHCR_TOKEN=
GITHUB_REPOSITORY=geraldobl58/nexo
