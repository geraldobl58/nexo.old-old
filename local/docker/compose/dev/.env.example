# ============================================================================
# NEXO PLATFORM - Environment Variables (Development)
# ============================================================================

# Application
NODE_ENV=development
APP_NAME=Nexo
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3003

# Database
DATABASE_URL=postgresql://nexo:nexo_dev_password@localhost:5432/nexo_dev
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Keycloak
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=nexo-dev
KEYCLOAK_CLIENT_ID=nexo-be
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin_dev

# JWT
JWT_SECRET=dev-secret-key-only-for-development
JWT_EXPIRATION=1d
JWT_REFRESH_EXPIRATION=7d

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Features
SWAGGER_ENABLED=true
METRICS_ENABLED=true

# Observability
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3001
LOKI_URL=http://localhost:3100

# Automations (optional)
MAKE_WEBHOOK_URL=
N8N_WEBHOOK_URL=
